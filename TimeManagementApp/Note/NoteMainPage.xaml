<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="TimeManagementApp.Note.NoteMainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TimeManagementApp.Note"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <DataTemplate x:Key="NoteViewFormat" x:DataType="local:MyNote">
            <Grid
                CornerRadius="2"
                Margin="0 4"
                Background="White" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                    
                <TextBlock FontSize="16" Margin="12 8">
                    <Run Text="{x:Bind Name, Mode=OneWay}"/>
                </TextBlock>
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <StackPanel Orientation="Vertical">
        <RelativePanel >
            <TextBlock
                x:Name="NumberOfNote"
                RelativePanel.AlignTopWithPanel="True"
                RelativePanel.AlignLeftWithPanel="True"
                Margin="28 16">
                Notes: <Run Text="{x:Bind ViewModel.TotalItems}"/>
            </TextBlock>
            <TextBlock
                RelativePanel.AlignTopWithPanel="True"
                RelativePanel.AlignHorizontalCenterWithPanel="True"
                Margin="16">
                Page: <Run Text="{x:Bind ViewModel.CurrentPage}"/>
            </TextBlock>

            <TextBox x:Name="NewNoteNameTextBox"
                RelativePanel.Below="NumberOfNote"
                RelativePanel.AlignLeftWithPanel="True"
                RelativePanel.LeftOf="NewNoteButton"
                Margin="24 8 12 8"
                PlaceholderText="Add a note"
                MinWidth="400"/>
            <Button x:Name="NewNoteButton" 
                RelativePanel.AlignRightWithPanel="True"
                RelativePanel.Below="NumberOfNote"
                Margin="4 8 20 8"
                Click="NewNoteButton_Click" 
                Content="Add"
                ToolTipService.ToolTip="New note">
            </Button>
            <Rectangle
                Height="2"                            
                Fill="SteelBlue"
                Margin="24 0"
                RelativePanel.AlignBottomWithPanel="True"
                RelativePanel.AlignLeftWithPanel="True"
                RelativePanel.AlignRightWithPanel="True"/>
        </RelativePanel>
        
        <ListView
            x:Name="NoteListView"
            RequestedTheme="Light"
            Margin="8 20"
            IsItemClickEnabled="True"
            ItemClick="Note_ItemClick"
            ItemsSource="{x:Bind ViewModel.Notes, Mode=OneWay}"
            ItemTemplate="{StaticResource NoteViewFormat}">
        </ListView>
    </StackPanel>
</Page>