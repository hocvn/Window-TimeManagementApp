<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="TimeManagementApp.Timer.MainTimerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TimeManagementApp.Timer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Button x:Name="SettingsButton" 
                Content="Settings" FontSize="12" 
                Width="80" Height="40" HorizontalAlignment="Right" VerticalAlignment="Top" 
                Click="SettingsButton_Click"/>

        <StackPanel x:Name="SettingsPanel" 
                    HorizontalAlignment="Right" VerticalAlignment="Top" 
                    Padding="20"
                    Visibility="Collapsed">
            <TextBlock Text="General Settings" FontSize="20" FontWeight="Bold" 
                       Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
                <TextBlock Text="Dark Mode" VerticalAlignment="Center"/>
                <ToggleSwitch Margin="10,0,0,0"/>
            </StackPanel>

            <StackPanel VerticalAlignment="Center" Margin="0,0,0,10">
                <TextBlock Text="FocusTime Minutes" VerticalAlignment="Center"/>
                <Slider x:Name ="FocusTimeSlider" Minimum="0" Maximum="60" Margin="10,0,0,0" Width="200"/>
            </StackPanel>

            <StackPanel VerticalAlignment="Center" Margin="0,0,0,10">
                <TextBlock Text="ShortBreak Minutes" VerticalAlignment="Center"/>
                <Slider x:Name ="ShortBreakSlider" Minimum="0" Maximum="60" Margin="10,0,0,0" Width="200"/>
            </StackPanel>

            <StackPanel VerticalAlignment="Center" Margin="0,0,0,10">
                <TextBlock Text="LongBreak Minutes" VerticalAlignment="Center"/>
                <Slider x:Name ="LongBreakSlider" Minimum="0" Maximum="60" Margin="10,0,0,0" Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
                <TextBlock Text="Notification" VerticalAlignment="Center"/>
                <ToggleSwitch Margin="10,0,0,0"/>
            </StackPanel>
            
            <Button Content="Save" Click="SaveButton_Click"
                    HorizontalAlignment="Center" VerticalAlignment="Bottom" 
                    Width="100" Margin="0,20,0,0"/>
        </StackPanel>

        <StackPanel x:Name="TimerPanel" 
                    HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid Width="200" Height="200">
                <Ellipse Stroke="Black" StrokeThickness="6"/>
                <TextBlock Text="{x:Bind ViewModel.TimerText, Mode=OneWay}" FontSize="48" 
                           HorizontalAlignment="Center" Margin="0,50,0,0"/>
                <TextBlock Text="{x:Bind ViewModel.CurrentType, Mode=OneWay}" FontSize="20" 
                           HorizontalAlignment="Center" Margin="0,120,0,0"/>
            </Grid>

            <StackPanel Orientation="Horizontal" Margin="0,20,0,0"
                        HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Content="Start" Click="StartButton_Click" Margin="0,0,0,0"/>
                <Button Content="Pause" Click="PauseButton_Click" Margin="5,0,0,0"/>
                <Button Content="Reset" Click="ResetButton_Click" Margin="5,0,0,0"/>
            </StackPanel>

            <Button Content="Skip this session" Click="SkipButton_Click" 
                    HorizontalAlignment="Center" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Page>
