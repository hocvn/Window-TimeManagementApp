<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="TimeManagementApp.ToDo.MainToDoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TimeManagementApp.ToDo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="340"/>
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0">
            <ListView x:Name="myTasksListView" 
                      ItemsSource="{x:Bind ViewModel.Tasks, Mode=OneWay}"
                      HorizontalAlignment="Left">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:MyTask">
                        <StackPanel Orientation="Horizontal" Margin="6">
                            <SymbolIcon Symbol="Calendar" Margin="0,0,12,0"/>
                            <StackPanel>
                                <TextBlock Text="{x:Bind TaskName}" FontWeight="Bold"/>
                                <TextBlock Text="{x:Bind TaskDescription}"/>
                                <TextBlock Text="{x:Bind StartTime}"/>
                                <TextBlock Text="{x:Bind EndTime}"/>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>

        <StackPanel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top">
            <ComboBox x:Name="MyComboBox" Width="200"
                      Header="TaskList Management"
                      SelectionChanged="MyComboBox_SelectionChanged"
                      HorizontalAlignment="Left"
                      VerticalAlignment ="Top" Margin="0,20,0,0">
                <ComboBoxItem Content="Insert" Tag="1"/>
                <ComboBoxItem Content="Delete" Tag="2"/>
                <ComboBoxItem Content="Update" Tag="3"/>
            </ComboBox>

            <StackPanel x:Name="InsertStackPanel" Margin="20" Visibility="Collapsed">
                <TextBox x:Name="NewTaskName" PlaceholderText="Task Name" Margin="0,0,0,10"/>
                <TextBox x:Name="NewTaskDescription" PlaceholderText="Task Description" Margin="0,0,0,10"/>
                <DatePicker x:Name="NewTaskStartTime" Margin="0,0,0,10"/>
                <TimePicker x:Name="NewTaskStartTimeTime" Margin="0,0,0,10"/>
                <DatePicker x:Name="NewTaskEndTime" Margin="0,0,0,10"/>
                <TimePicker x:Name="NewTaskEndTimeTime" Margin="0,0,0,10"/>
                <Button Content="Add Task" Click="AddTask_Click" Margin="0,0,0,10"/>
            </StackPanel>

            <StackPanel x:Name="DeleteStackPanel" Margin="20" Visibility="Collapsed">
                <TextBlock Text="Choose task on the list and click Delete" Margin="0,0,0,10"/>
                <Button Content="Delete Task" Click="DeleteTask_Click" Margin="0,0,0,10"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
