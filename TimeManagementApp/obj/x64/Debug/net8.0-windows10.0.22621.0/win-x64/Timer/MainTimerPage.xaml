<?xml version="1.0" encoding="utf-8"?>
<Page x:ConnectionId='1'
    x:Class="TimeManagementApp.Timer.MainTimerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TimeManagementApp.Timer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="AliceBlue" Offset="0.0" />
                <GradientStop Color="WhiteSmoke" Offset="1.5" />
            </LinearGradientBrush>
        </Grid.Background>

        <!--Area for PomodoroTimer-->
        <StackPanel x:ConnectionId='2' x:Name="TimerPanel" 
                    HorizontalAlignment="Center" VerticalAlignment="Center">
            
            <Grid Width="200" Height="200">
                <!--first ellipse with stroke color base on current type-->
                <Ellipse x:ConnectionId='15'                                                     
                                                                             />

                <!--second ellipse with white stroke that have empty parts base on time left-->
                <Ellipse x:ConnectionId='16' Stroke="White" 
                                                                             
                                                                                          
                         RenderTransformOrigin="0.5,0.5">
                    <Ellipse.RenderTransform>
                        <RotateTransform Angle="-90"/>
                    </Ellipse.RenderTransform>
                </Ellipse>

                <!--binding current time and type-->
                <TextBlock x:ConnectionId='17'                                                  FontSize="48" 
                           HorizontalAlignment="Center" Margin="0,50,0,0"/>
                <TextBlock x:ConnectionId='18'                                                    FontSize="20" 
                           HorizontalAlignment="Center" Margin="0,120,0,0"/>
            </Grid>

            <!--play, pause, reset timer features-->
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0"
                        HorizontalAlignment="Center" VerticalAlignment="Center">
                <AppBarButton x:ConnectionId='12' Icon="Play" Label="Start"                          />
                <AppBarButton x:ConnectionId='13' Icon="Pause" Label="Pause"                          />
                <AppBarButton x:ConnectionId='14' Icon="Refresh" Label="Reset"                          />
            </StackPanel>

            <!--settings & skip session-->
            <StackPanel Orientation="Horizontal" Margin="0,-10,0,0"
                        HorizontalAlignment="Center" VerticalAlignment="Center">
                <AppBarButton x:ConnectionId='10' Icon="Forward" Label="Skip this session"                         />
                <AppBarButton x:ConnectionId='11' x:Name="SettingsButton" 
                              Icon="Setting" Label="Settings"                             />
            </StackPanel>
            
        </StackPanel>

        <!--Area for SettingsPanel 
        (currently use visibility controls, will use frame navigation later)-->
        <StackPanel x:ConnectionId='3' x:Name="SettingsPanel" 
                    HorizontalAlignment="Right" VerticalAlignment="Top" Padding="20"
                    Visibility="Collapsed">
            
            <!--title-->
            <TextBlock Text="General Settings" 
                       FontSize="18" FontWeight="Bold" 
                       Margin="0,0,0,20"/>

            <!--sliders for user to adjust focus time, break time-->
            
            <StackPanel VerticalAlignment="Center" Margin="0,10,0,10">
                <TextBlock Text="FocusTime Minutes" VerticalAlignment="Center"/>
                
                <Slider x:ConnectionId='9' x:Name ="FocusTimeSlider" 
                                                                                                
                        Minimum="1" Maximum="60" 
                        Margin="10,0,0,0" Width="200"/>
            </StackPanel>

            <StackPanel VerticalAlignment="Center" Margin="0,0,0,10">
                <TextBlock Text="ShortBreak Minutes" VerticalAlignment="Center"/>
                
                <Slider x:ConnectionId='8' x:Name ="ShortBreakSlider" 
                                                                                                 
                        Minimum="1" Maximum="60" 
                        Margin="10,0,0,0" Width="200"/>
            </StackPanel>

            <StackPanel VerticalAlignment="Center" Margin="0,0,0,10">
                <TextBlock Text="LongBreak Minutes" VerticalAlignment="Center"/>
                
                <Slider x:ConnectionId='7' x:Name ="LongBreakSlider" 
                                                                                                
                        Minimum="1" Maximum="60" 
                        Margin="10,0,0,0" Width="200"/>
            </StackPanel>

            <!--choose notifications on or off-->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
                <TextBlock Text="Notification" VerticalAlignment="Center"/>
                <ToggleSwitch x:ConnectionId='6' x:Name="NotificationToggleSwitch" Margin="10,0,0,0" IsOn="True"/>
            </StackPanel>

            <!--save settings or close panel-->
            <StackPanel Orientation="Horizontal" Margin="0,5,0,0"
                        HorizontalAlignment="Center" VerticalAlignment="Center">
                <AppBarButton x:ConnectionId='4' Icon="Save" Label="Save"                         />
                <AppBarButton x:ConnectionId='5' Icon="Cancel" Label="Close"                          />
            </StackPanel>
            
        </StackPanel>
    </Grid>
</Page>

