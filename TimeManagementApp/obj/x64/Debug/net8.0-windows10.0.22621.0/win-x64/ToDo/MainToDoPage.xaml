<?xml version="1.0" encoding="utf-8"?>
<Page x:ConnectionId='1'
    x:Class="TimeManagementApp.ToDo.MainToDoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TimeManagementApp.ToDo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <local:DateTimeToDateTimeOffsetConverter x:Key="DateTimeToDateTimeOffsetConverter"/>
    </Page.Resources>
    
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="AliceBlue" Offset="0.0" />
                <GradientStop Color="WhiteSmoke" Offset="1.5" />
            </LinearGradientBrush>
        </Grid.Background>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="330"/>
        </Grid.ColumnDefinitions>
        
        <!--Area for ToDoListView-->
        <StackPanel Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0">
            <ListView x:ConnectionId='20' x:Name="myTasksListView" 
                                                                         
                      HorizontalAlignment="Left"
                                                                         >
                <ListView.ItemTemplate>
                    <DataTemplate                          >
                        <StackPanel x:ConnectionId='22' Orientation="Horizontal" Margin="6">
                            <SymbolIcon Symbol="Calendar" Margin="0,0,12,0"/>
                            <StackPanel>
                                <TextBlock x:ConnectionId='23'                          FontWeight="Bold"/>
                                <TextBlock x:ConnectionId='24'                                />
                                <TextBlock x:ConnectionId='25'                          />
                                <TextBlock x:ConnectionId='26'                        />
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>

        <!--Area for Insert, Delete, Remove features-->
        <StackPanel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top">

            <!--Expander for Insert Task-->
            <controls:SettingsExpander x:ConnectionId='2'                                                            >
                <controls:SettingsExpander.Header>
                    <StackPanel Orientation="Horizontal">
                        <FontIcon Glyph="&#xE710;" Margin="0,0,10,0"/>
                        <TextBlock Text="Insert Task"/>
                    </StackPanel>
                </controls:SettingsExpander.Header>

                <controls:SettingsExpander.ItemsHeader>
                    <InfoBar
                        IsClosable="False"
                        IsIconVisible="True"
                        IsOpen="True"
                        Severity="Success">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Fill the space and click" Margin="0,5,0,0"/>
                            <Button x:ConnectionId='13' Content="Insert Task"                          Margin="35,0,0,0"/>
                        </StackPanel>
                    </InfoBar>
                </controls:SettingsExpander.ItemsHeader>

                <controls:SettingsExpander.Items>
                    <controls:SettingsCard>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Task name:" Grid.Column="0" VerticalAlignment="Center" Margin="-20,0,55,0"/>
                            <TextBox x:ConnectionId='19' x:Name="InsertTaskName" PlaceholderText="Task Name" Grid.Column="1"/>
                        </Grid>
                    </controls:SettingsCard>

                    <controls:SettingsCard>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Task description:" Grid.Column="0" VerticalAlignment="Center" Margin="-20,-10,20,0"/>
                            <TextBox x:ConnectionId='18' x:Name="InsertTaskDescription" PlaceholderText="Task Description" Grid.Column="1" Margin="0,-10,0,0"/>
                        </Grid>
                    </controls:SettingsCard>

                    <controls:SettingsCard>
                        <Grid Margin="-20,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Start time:" Grid.Column="0" Grid.Row="0" Margin="0,5,0,0"/>
                            <CalendarDatePicker x:ConnectionId='16' x:Name="InsertTaskStartDate" Grid.Column="1" Grid.Row="0" Margin="-120,0,0,0"/>
                            <TimePicker x:ConnectionId='17' x:Name="InsertTaskStartTime" Grid.Row="1" Margin="0,5,0,0"/>
                        </Grid>
                    </controls:SettingsCard>

                    <controls:SettingsCard>
                        <Grid Margin="-20,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="End time:" Grid.Column="0" Grid.Row="0" Margin="0,5,0,0"/>
                            <CalendarDatePicker x:ConnectionId='14' x:Name="InsertTaskEndDate" Grid.Column="1" Grid.Row="0" Margin="-120,0,0,0"/>
                            <TimePicker x:ConnectionId='15' x:Name="InsertTaskEndTime" Grid.Row="1" Margin="0,5,0,0"/>
                        </Grid>
                    </controls:SettingsCard>
                </controls:SettingsExpander.Items>
            </controls:SettingsExpander>

            <!--Expander for Delete Task-->
            <controls:SettingsExpander x:ConnectionId='3'                                                            >
                <controls:SettingsExpander.Header>
                    <StackPanel Orientation="Horizontal">
                        <FontIcon Glyph="&#xE74D;" Margin="0,0,10,0"/>
                        <TextBlock Text="Delete Task"/>
                    </StackPanel>
                </controls:SettingsExpander.Header>

                <controls:SettingsExpander.ItemsHeader>
                    <InfoBar
                        IsClosable="False"
                        IsIconVisible="True"
                        IsOpen="True"
                        Severity="Success">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Select a task and click" Margin="0,5,0,0"/>
                            <Button x:ConnectionId='12' Content="Delete Task"                          Margin="35,0,0,0"/>
                        </StackPanel>
                    </InfoBar>
                </controls:SettingsExpander.ItemsHeader>
            </controls:SettingsExpander>

            <!--Expander for Update Task-->
            <controls:SettingsExpander x:ConnectionId='4'                                                            >
                <controls:SettingsExpander.Header>
                    <StackPanel Orientation="Horizontal">
                        <FontIcon Glyph="&#xE777;" Margin="0,0,10,0"/>
                        <TextBlock Text="Update Task"/>
                    </StackPanel>
                </controls:SettingsExpander.Header>

                <controls:SettingsExpander.ItemsHeader>
                    <InfoBar
                        IsClosable="False"
                        IsIconVisible="True"
                        IsOpen="True"
                        Severity="Success">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Select a task and update" Margin="0,5,0,0"/>
                            <Button x:ConnectionId='5' Content="Update Task"                          Margin="15,0,0,0"/>
                        </StackPanel>
                    </InfoBar>
                </controls:SettingsExpander.ItemsHeader>

                <controls:SettingsExpander.Items>
                    <controls:SettingsCard>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Task name:" Grid.Column="0" VerticalAlignment="Center" Margin="-20,0,55,0"/>
                            <TextBox x:ConnectionId='11' x:Name="UpdateTaskName" PlaceholderText="Task Name" Grid.Column="1"
                                                                                            />
                        </Grid>
                    </controls:SettingsCard>

                    <controls:SettingsCard>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Task description:" Grid.Column="0" VerticalAlignment="Center" Margin="-20,-10,20,0"/>
                            <TextBox x:ConnectionId='10' x:Name="UpdateTaskDescription" PlaceholderText="Task Description" Grid.Column="1" Margin="0,-10,0,0"
                                                                                                   />
                        </Grid>
                    </controls:SettingsCard>

                    <controls:SettingsCard>
                        <Grid Margin="-20,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Start time:" Grid.Column="0" Grid.Row="0" Margin="0,5,0,0"/>
                            <CalendarDatePicker x:ConnectionId='8' x:Name="UpdateTaskStartDate" Grid.Column="1" Grid.Row="0" Margin="-120,0,0,0"
                                                                                                        
                                                                                                                      />
                            <TimePicker x:ConnectionId='9' x:Name="UpdateTaskStartTime" Grid.Row="1" Margin="0,5,0,0"
                                                                                                          />
                        </Grid>
                    </controls:SettingsCard>

                    <controls:SettingsCard>
                        <Grid Margin="-20,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="End time:" Grid.Column="0" Grid.Row="0" Margin="0,5,0,0"/>
                            <CalendarDatePicker x:ConnectionId='6' x:Name="UpdateTaskEndDate" Grid.Column="1" Grid.Row="0" Margin="-120,0,0,0"
                                                                                                      
                                                                                                                      />
                            <TimePicker x:ConnectionId='7' x:Name="UpdateTaskEndTime" Grid.Row="1" Margin="0,5,0,0"
                                                                                                        />
                        </Grid>
                    </controls:SettingsCard>
                </controls:SettingsExpander.Items>
            </controls:SettingsExpander>
        </StackPanel>
    </Grid>
</Page>

